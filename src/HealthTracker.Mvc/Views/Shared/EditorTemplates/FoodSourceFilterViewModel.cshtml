@using HealthTracker.Mvc.Entities
@model HealthTracker.Mvc.Models.FoodSourceFilterViewModel

<div class="container-fluid">
    <div class="row">
        <div class="col">
            <strong>@Html.LabelFor(m => m.FoodSourceId)</strong>
            <div class="input-group">
                @Html.DropDownListFor(m => m.FoodSourceId, Model.Sources, new { @class = "form-control" })
            </div>
            <span>@Html.ValidationMessageFor(m => m.FoodSourceId, "", new { @class = "text-danger" })</span>
        </div>
        <div class="col">
            <strong><label>&nbsp;</label></strong>
            <div class="input-group">
                <button type="submit" name="Action" id="Search" value="@ControllerActions.ActionSearch" class="btn btn-primary" style="margin-right: 10px">Search</button>
                @if (Model.ShowAddButton)
                {
                    <button type="submit" name="Action" value="@ControllerActions.ActionAdd" class="btn btn-primary" style="margin-right: 10px">Add</button>
                }
                @if (Model.ShowExportButton)
                {
                    <button type="submit" name="Action" value="@ControllerActions.ActionExport" class="btn btn-primary">Export</button>
                }
            </div>
        </div>
    </div>
    <br/>
</div>

<script type="text/javascript">
    $(document).ready(function() {
        $(document).on("keydown", function (e) {
            if (e.key === "Enter") {
                e.preventDefault();
                $('#Search').click();
            }
        });
    });
</script>
