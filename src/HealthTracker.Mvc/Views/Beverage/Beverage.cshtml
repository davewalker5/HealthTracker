@model HealthTracker.Mvc.Models.BeverageViewModel

@Html.HiddenFor(m => m.Beverage.Id)

<div class="container-fluid">
    <div class="row">
        <div class="col">
            <strong>@Html.LabelFor(m => m.Beverage.Name)</strong>
        </div>
        <div class="col">
            <div class="input-group">
                @Html.TextBoxFor(m => m.Beverage.Name, new { @class = "form-control" })
            </div>
            <span>@Html.ValidationMessageFor(m => m.Beverage.Name, "", new { @class = "text-danger" })</span>
        </div>
    </div>
    <br/>
    <div class="row">
        <div class="col">
            <strong>@Html.LabelFor(m => m.Beverage.TypicalABV)</strong>
        </div>
        <div class="col">
            <div class="input-group">
                @Html.TextBoxFor(m => m.Beverage.TypicalABV, new { @class = "form-control" })
            </div>
            <span>@Html.ValidationMessageFor(m => m.Beverage.TypicalABV, "", new { @class = "text-danger" })</span>
        </div>
    </div>
</div>
