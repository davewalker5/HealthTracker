@model HealthTracker.Mvc.Models.BeverageViewModel

@Html.HiddenFor(m => m.Beverage.Id)

<div class="container-fluid">
    <div class="row">
        <div class="col">
            <strong>@Html.LabelFor(m => m.Beverage.Name)</strong>
        </div>
        <div class="col">
            <div class="input-group">
                @Html.TextBoxFor(m => m.Beverage.Name, new { @class = "form-control" })
            </div>
            <span>@Html.ValidationMessageFor(m => m.Beverage.Name, "", new { @class = "text-danger" })</span>
        </div>
    </div>
    <br/>
    <div class="row">
        <div class="col">
            <strong>@Html.LabelFor(m => m.Beverage.TypicalABV)</strong>
        </div>
        <div class="col">
            <div class="input-group">
                @Html.TextBoxFor(m => m.Beverage.TypicalABV, new { @class = "form-control" })
            </div>
            <span>@Html.ValidationMessageFor(m => m.Beverage.TypicalABV, "", new { @class = "text-danger" })</span>
        </div>
    </div>
    <br/>
    <div class="row">
        <div class="col">
            <strong>@Html.LabelFor(m => m.Beverage.IsHydrating)</strong>
        </div>
        <div class="col">
            <div class="input-group">
                @Html.CheckBoxFor(m => m.Beverage.IsHydrating, new { @class = "form-control" })
            </div>
            <span>@Html.ValidationMessageFor(m => m.Beverage.IsHydrating, "", new { @class = "text-danger" })</span>
        </div>
    </div>
    <br/>
    <div class="row">
        <div class="col">
            <strong>@Html.LabelFor(m => m.Beverage.IsAlcohol)</strong>
        </div>
        <div class="col">
            <div class="input-group">
                @Html.CheckBoxFor(m => m.Beverage.IsAlcohol, new { @class = "form-control" })
            </div>
            <span>@Html.ValidationMessageFor(m => m.Beverage.IsAlcohol, "", new { @class = "text-danger" })</span>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function() {
        $(document).on("keydown", function (e) {
            if (e.key === "Enter") {
                e.preventDefault();
                $('#Save').click();
            }
        });
    });
</script>
