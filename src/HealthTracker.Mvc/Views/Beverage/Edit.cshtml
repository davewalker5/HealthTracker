@using HealthTracker.Mvc.Entities
@model HealthTracker.Mvc.Models.EditBeverageViewModel

@{
    ViewData["Title"] = "Edit Beverage";
}

<div class="container-fluid">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-md">
                <span style="font-size: 1.2rem"><strong>Edit Beverage</strong></span>
            </div>
        </div>
        <hr />

        @await Html.PartialAsync("Beverage", Model);
        <br />

        <div class="row">
            <div class="col-md">
                <div class="input-group">
                    <button type="submit" name="Action" value="@ControllerActions.ActionCancel" class="btn btn-secondary" style="margin-right:10px">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    }
</div>
