@model HealthTracker.Mvc.Models.WeightViewModel

@Html.HiddenFor(m => m.PersonName)
@Html.HiddenFor(m => m.Measurement.Id)
@Html.HiddenFor(m => m.Measurement.PersonId)

<div class="container-fluid">
    <div class="row">
        <div class="col">
            <strong>@Html.Label("Name")</strong>
            <div class="input-group">
                @Html.TextBoxFor(m => m.PersonName, new { @class = "form-control", disabled = "disabled" })
            </div>
        </div>
    </div>
    <br/>
    <div class="row">
        <div class="col">
            <strong>@Html.LabelFor(m => m.Measurement.Weight)</strong>
            <div class="input-group">
                @Html.TextBoxFor(m => m.Measurement.Weight, new { @class = "form-control" })
            </div>
            <span>@Html.ValidationMessageFor(m => m.Measurement.Weight, "", new { @class = "text-danger" })</span>
        </div>
    </div>
</div>

