@model HealthTracker.Mvc.Models.BloodPressureViewModel

@Html.HiddenFor(m => m.PersonName)
@Html.HiddenFor(m => m.Measurement.Id)
@Html.HiddenFor(m => m.Measurement.PersonId)

<div class="container-fluid">
    <div class="row">
        <div class="col">
            <strong>@Html.Label("Name")</strong>
            <div class="input-group">
                @Html.TextBoxFor(m => m.PersonName, new { @class = "form-control", disabled = "disabled" })
            </div>
        </div>
    </div>
    <br/>
    <div class="row">
        <div class="col">
            <strong>@Html.LabelFor(m => m.Measurement.Date)</strong>
            <div class="input-group">
                @Html.TextBoxFor(m => m.Measurement.Date, null, new { @class = "form-control" })
                <script type="text/javascript">
                    new GijgoDatePicker(document.getElementById("Measurement_Date"), {
                        calendarWeeks: false,
                        uiLibrary: "bootstrap4",
                        format: "dd/mm/yyyy",
                        value: "@Model.Measurement.Date.ToString("dd/MM/yyyy")"
                    });
                </script>
            </div>
            <span>@Html.ValidationMessageFor(m => m.Measurement.Date, "", new { @class = "text-danger" })</span>
        </div>
    </div>
    <br/>
    <div class="row">
        <div class="col">
            <strong>@Html.LabelFor(m => m.Measurement.Systolic)</strong>
            <div class="input-group">
                @Html.TextBoxFor(m => m.Measurement.Systolic, new { @class = "form-control" })
            </div>
            <span>@Html.ValidationMessageFor(m => m.Measurement.Systolic, "", new { @class = "text-danger" })</span>
        </div>
    </div>
    <br/>
    <div class="row">
        <div class="col">
            <strong>@Html.LabelFor(m => m.Measurement.Diastolic)</strong>
            <div class="input-group">
                @Html.TextBoxFor(m => m.Measurement.Diastolic, new { @class = "form-control" })
            </div>
            <span>@Html.ValidationMessageFor(m => m.Measurement.Diastolic, "", new { @class = "text-danger" })</span>
        </div>
    </div>
</div>

