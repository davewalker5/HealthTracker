@using HealthTracker.Mvc.Entities
@model HealthTracker.Mvc.Models.EditBloodPressureViewModel

@{
    ViewData["Title"] = "Edit Blood Pressure Measurement";
}

<div class="container-fluid">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-md">
                <span style="font-size: 1.2rem"><strong>Edit Blood Pressure Measurement</strong></span>
            </div>
        </div>
        <hr />

        @await Html.PartialAsync("BloodPressure", Model)

        <br />

        <div class="row">
            <div class="col-md">
                <div class="input-group">
                    <button type="submit" name="Action" value="@ControllerActions.ActionCancel" class="btn btn-secondary" style="margin-right:10px">Cancel</button>
                    <button type="submit" name="Action" id="Save" value="@ControllerActions.ActionSave" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    }
</div>
