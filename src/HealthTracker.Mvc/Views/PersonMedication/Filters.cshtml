@using HealthTracker.Mvc.Entities
@model HealthTracker.Mvc.Models.PersonMedicationListViewModel

@Html.HiddenFor(m => m.Filters.From)
@Html.HiddenFor(m => m.Filters.To)

<div class="container-fluid">
    <div class="row">
        <div class="col">
            <strong>@Html.LabelFor(m => m.Filters.PersonId)</strong>
            <div class="input-group">
                @Html.DropDownListFor(m => m.Filters.PersonId, Model.Filters.People, new { @class = "form-control" })
            </div>
            <span>@Html.ValidationMessageFor(m => m.Filters.PersonId, "", new { @class = "text-danger" })</span>
        </div>
        <div class="col">
            <strong><label>&nbsp;</label></strong>
            <div class="input-group">
                <button type="submit" name="Action" value="@ControllerActions.ActionSearch" class="btn btn-primary" style="margin-right: 10px">Search</button>
                <button type="submit" name="Action" value="@ControllerActions.ActionAdd" class="btn btn-primary">Add</button>
            </div>
        </div>
    </div>
    <br/>
</div>